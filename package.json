{
  "name": "nest-books-app",
  "version": "1.0.0",
  "description": "Books Application Backend to publish books",
  "author": "Hovhannes Baghdasaryan",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "audit": "yarn run audit-ci --config ./audit-ci.json",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "typeorm": "env-cmd ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- --dataSource=src/database/configurations/typeorm/data-source.ts migration:generate",
    "migration:create": "npm run typeorm -- migration:create",
    "migration:run": "npm run typeorm -- --dataSource=src/database/configurations/typeorm/data-source.ts migration:run",
    "migration:revert": "npm run typeorm -- --dataSource=src/database/configurations/typeorm/data-source.ts migration:revert",
    "schema:drop": "npm run typeorm -- --dataSource=src/database/configurations/typeorm/data-source.ts schema:drop",
    "lint": "eslint --config ./.eslintrc.js \"{src,apps,libs}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.1",
    "@nestjs/cache-manager": "^2.1.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/platform-socket.io": "^10.2.7",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/swagger": "^7.1.13",
    "@nestjs/typeorm": "^10.0.0",
    "audit-ci": "^6.6.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "mysql2": "^3.9.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.13",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.12",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "env-cmd": "10.1.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-date": "^0.0.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "eslint-plugin-yaml": "^0.5.0",
    "jest": "29.5.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1",
      "^@entities/(.*)$": "<rootDir>/src/database/entities/$1",
      "^@common/(.*)$": "<rootDir>/src/common/$1",
      "^@modules/(.*)$": "<rootDir>/src/modules/$1",
      "^@repositories/(.*)$": "<rootDir>/src/database/repositories/$1",
      "^@database-configurations/(.*)$": "<rootDir>/src/database/configurations/$1",
      "^@errors/(.*)$": "<rootDir>/src/common/errors/$1",
      "^@config/(.*)$": "<rootDir>/src/common/config/$1",
      "^@enums/(.*)$": "<rootDir>/src/common/enums/$1",
      "^@guards/(.*)$": "<rootDir>/src/common/guards/$1",
      "^@constants/(.*)$": "<rootDir>/src/common/constants/$1",
      "^@types/(.*)$": "<rootDir>/src/common/types/$1",
      "^@helpers/(.*)$": "<rootDir>/src/common/helpers/$1",
      "^@dto/(.*)$": "<rootDir>/src/common/dtos/$1",
      "^@middlewares/(.*)$": "<rootDir>/src/common/middlewares/$1",
      "^@decorators/(.*)$": "<rootDir>/src/common/decorators/$1",
      "^@responses/(.*)$": "<rootDir>/src/common/responses/$1",
      "^@interfaces/(.*)$": "<rootDir>/src/common/interfaces/$1",
      "^@exceptions/(.*)$": "<rootDir>/src/common/exceptions/$1",
      "^@validators/(.*)$": "<rootDir>/src/common/validators/$1"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
